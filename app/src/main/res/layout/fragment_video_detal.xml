<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">
            <VideoView
                android:id="@+id/vvVideo"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <RelativeLayout
                android:id="@+id/detal"
                android:layout_below="@+id/vvVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/detal_video"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_mota"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/img_video"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:id="@+id/detal_video1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/tv_mota"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center" />

                        <TextView

                            android:id="@+id/tv_view"
                            android:layout_width="126dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center" />

                        <TextView

                            android:id="@+id/tv_ngay"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center" />

                    </LinearLayout>
                    <RatingBar
                        android:id="@+id/rate_video"
                        android:numStars="4"
                        android:layout_below="@id/detal_video1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</layout>